        <Button
            android:layout_margin="@dimen/button_margin"
            android:text="1" />

        <Button
            android:layout_margin="@dimen/button_margin"
            android:text="1" />

        <Button
            android:layout_margin="@dimen/button_margin"
            android:text="1" />
    </TableRow>
</TableLayout>